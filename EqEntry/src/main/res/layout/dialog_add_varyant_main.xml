<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yeni Varyant Ekle"
            android:textSize="20sp"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTanim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Varyant ismi giriniz"
            app:hintTextColor="#757575"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#B0BEC5"

            app:boxBackgroundColor="#FAFAFA"
        >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTanim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="18sp"
                android:padding="14dp"
                android:textColor="#212121" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:paddingTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ä°ptal"
                android:textColor="#757575"
                app:backgroundTint="#E0E0E0"
                app:cornerRadius="8dp"
                android:textSize="14sp"
                />
         <View
             android:layout_width="50dp"
             android:layout_height="1dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Kaydet"
                android:textColor="#FFFFFF"
                app:backgroundTint="#0288D1"
                app:cornerRadius="8dp"
                android:textSize="14sp"
                 />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>