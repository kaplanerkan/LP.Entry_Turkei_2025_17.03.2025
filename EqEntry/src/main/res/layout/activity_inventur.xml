<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ly_inventur_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            style="@style/AppTheme.EditText"
            android:id="@+id/ed_inventur_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="@string/find"
            android:inputType="text" />
        <Button
            style="@style/StdButton"
            android:background="@drawable/std_button"
            android:id="@+id/bt_inventur_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barcode"/>

        <Button
            style="@style/StdButton"
            android:background="@drawable/std_button"
            android:id="@+id/bt_inventur_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_inventur_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <Button
            style="@style/StdButton"
            android:background="@drawable/std_button"
            android:id="@+id/bt_inventur_send"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/sendstockcount"/>
    </LinearLayout>
</LinearLayout>
