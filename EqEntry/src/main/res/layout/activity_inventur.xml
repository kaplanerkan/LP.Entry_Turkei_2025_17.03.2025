<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_inventur_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_inventur_find"
            style="@style/AppTheme.EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:queryHint="@string/find"
            android:selectAllOnFocus="true" />

        <Button
            android:id="@+id/bt_inventur_barcode"
            style="@style/StdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/std_button"
            android:text="@string/barcode" />

        <Button
            android:id="@+id/bt_inventur_find"
            style="@style/StdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/std_button"
            android:text="@string/find" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_inventur_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <Button
            android:id="@+id/bt_inventur_send"
            style="@style/StdButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/std_button"
            android:text="@string/sendstockcount" />
    </LinearLayout>
</LinearLayout>
