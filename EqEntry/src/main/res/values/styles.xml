<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittexttyle</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:dropDownSelector">@color/colorAqua</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="SpinnerThemeLight" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="SpinnerTheme.DropDown">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="SpinnerItemTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:padding">3dp</item>
        <item name="android:headerBackground">@color/colorAccent</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="StdButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#494949</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="StdButton2" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#494949</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>

    </style>

    <style name="ButtonProductGroup" parent="android:Widget.Button">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/standard_font_size</item>
        <item name="android:background">@drawable/button_productgroup</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_height">@dimen/group_button_height</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
</resources>
